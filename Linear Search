#include <iostream>
using namespace std;

int main() {
    int n, key;

    cout << "Enter the number of elements: ";
    cin >> n;

    int arr[n];

    cout << "Enter " << n << " elements:\n";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    cout << "Enter the element to search: ";
    cin >> key;

    bool found = false;
    for (int i = 0; i < n; i++) {
        if (arr[i] == key) {
            cout << "Element " << key << " found at index " << i << " (position " << i + 1 << ")\n";
            found = true;
            break; // Stop after finding first occurrence
        }
    }

    if (!found) {
        cout << "Element " << key << " not found in the array.\n";
    }

    return 0;
}


/*Output:-

Enter the number of elements: 5
Enter 5 elements:
3 6 4 9 8
Enter the element to search: 6
Element 6 found at index 1 (position 2)

*/
