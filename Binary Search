#include <iostream>
using namespace std;

int binarySearch(int arr[], int n, int key) {
    int low = 0, high = n - 1;

    while (low <= high) {
        int mid = (low + high) / 2;  

        if (arr[mid] == key)        
            return mid;

        else if (arr[mid] < key)     
            low = mid + 1;

        else                        
            high = mid - 1;
    }
    return -1;  
}

int main() {
    int n, key;

    cout << "Enter the number of elements: ";
    cin >> n;

    int arr[n];


    cout << "Enter " << n << " sorted elements (ascending order):\n";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    cout << "Enter the element to search: ";
    cin >> key;

    int result = binarySearch(arr, n, key);

    if (result != -1)
        cout << "Element " << key << " found at index " << result
             << " (position " << result + 1 << ").\n";
    else
        cout << "Element " << key << " not found in the array.\n";

    return 0;
}
 
 
 /*Output:-
 Enter the number of elements: 7
Enter 7 sorted elements (ascending order):
1 2 3 5 7 8 9
Enter the element to search: 5
Element 5 found at index 3 (position 4).
*/
